{
  "manifest_version": 3,
  "name": "Tra nhanh từ tiếng Nga",
  "version": "6.1",
  "description": "Chọn từ hoặc cụm từ tiếng Nga trên bất kỳ trang web nào để nhận bản dịch, phát âm và phân tích ngữ pháp chi tiết từ AI.",
  "permissions": [
    "storage",
    "activeTab",
    "offscreen"
  ],
  "host_permissions": [
    "*://translate.googleapis.com/*"
  ],
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "bubble.css"
      ]
    }
  ],
  "action": {
    "default_title": "Russian Helper - Cài đặt",
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icon.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}